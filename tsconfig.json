{
	"compilerOptions": {
		"target": "ES6",
		"module": "ES6",
		"noImplicitAny": false,
		"removeComments": false,
		"preserveConstEnums": true,
		"sourceMap": true,
		"allowJs": false,
		"moduleResolution": "Node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"rootDir": "src",
		"typeRoots": ["node_modules/@types", "src/types"]
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "**/dist", "**/vendor/**/*"]
}
